.preview__container {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
}

.profile__content {
  position: relative;
  max-width: 400px;
  margin: 0 auto;
  padding: 20px;
  text-align: center;
}

/* header img { */
.profile__header img {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-bottom: 15px;
}

.preview__link {
  list-style: none;
  padding: 0;
}

.preview__link li {
  margin: 10px 0;
}

.preview__link li a {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 10px;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 5px;
  text-decoration: none;
  color: #333;
}

.preview__link li a:hover {
  background-color: rgba(255, 255, 255, 1);
} 

.preview__container {
  background: linear-gradient(to bottom, #E5E7EB, #D1D5DB);
  background-repeat: no-repeat;
  background-size: cover;
}

.preview__main {
  position: relative;
}

.preview__main.animated {
  opacity: 0;
  filter: blur(10px);
  transition:
    opacity 2s ease-in-out,
    filter 2s ease-in-out;
}


.preview__header {
  margin-top: 3em;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview__header > img {
  width: 6em;
  height: 6em;
  border-radius: 100%;
  border: 1px solid #fff;
  box-shadow: rgb(28 32 93 / 24%) 0px 2px 8px 0px;
}

.preview__header > h1 {
  display: inline-block;
  font-size: 0.8em;
  font-weight: bold;
  border-radius: 1em;
  background-color: #000a;
  color: #fff;
  padding: 0.3em 0.6em;
  border: 1px solid #fffa;
  backdrop-filter: blur(10px) saturate(160%) contrast(180%);
  -webkit-backdrop-filter: blur(10px) saturate(160%) contrast(180%);
}

.preview__link {
  box-sizing: border-box;
  list-style: none;
  margin: 0 auto;
  padding: 2em;
  max-width: 480px;
}

.preview__link > li {
  background-color: #fffa;
  backdrop-filter: blur(10px) saturate(160%) contrast(180%);
  -webkit-backdrop-filter: blur(10px) saturate(160%) contrast(180%);
  border-radius: 10em;
  margin: 1.4em 0;
  box-shadow: rgb(28 32 93 / 24%) 0px 2px 8px 0px;
}

.preview__link > li > a {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 0.5em;
  padding: 1em;
}

a {
  color: black;
  text-decoration: none;
}

